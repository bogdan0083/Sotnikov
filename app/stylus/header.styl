.header
	width 100%
	text-align center
	min-height 72px
	.container
		padding 0
	+above(880px)
		top 0
		left 0
		width 100%
		background-color rgba(white, 0.9)
		position relative
		padding 0 15px
		z-index 10
		&:after
			content ''
			height 10px
			background linear-gradient(to bottom, rgba(black, 0.08), transparent)
			width 100%
			bottom -10px
			position absolute
			left 0
	.logo
		margin-right 20px
		display inline-block
		text-align center
		margin-top 7px
		text-transform uppercase
		+above(880px)
			float left
			
	.logo-caption
		display block
		text-align left
		font-size: 0.85rem
		color gray
		margin-left 2px
		+above(880px)
			font-size 0.75rem
			
	.desc
		font-size 1.2rem
		margin-top 10px
		text-transform uppercase
		rbs()
		+above(880px)
			font-size 0.875rem
			float left
			line-height 72px	
			height 72px
			display none
			margin-top 0
		+above(1200px)
			display block
	.header-nav
		text-align center
		color white
		clear both
		rbs()
		font-size 1.3rem
		display none
		background-color $green
		overflow hidden
		padding-bottom 4px
		a
			display block
			margin 4px 0
		+above(880px)
			float right
			display block
			background-color transparent
			padding-bottom 0
			font-size 0.875rem
			clear none
			margin-right 20px
			text-transform uppercase
			rb()
			a
				height 72px
				line-height 72px
				color gray
				margin 0 6px
				display inline-block
				transition all 0.3s
				position relative
				&:hover
					color $brown
				&:hover:before
					transform none
				&:before
					content ''
					position absolute
					background-color $brown
					height 4px
					transition all 0.3s
					transform translateY(100%)
					width 100%
					bottom 0
					left 0	
		+above(1200px)
			margin-right 35px
			a 
				margin 0 12px
				
.phone-block
	font-size: 1.5rem;
	rbs()
	
	.icon
		margin-right 8px
	strong
		color: #b0b0b0;
		font-weight 400
	+above(880px)
		float right
		line-height 68px
		height 72px
		