.promo-offer
	background-color rgba(white, 0.9)
	text-align center
	.button 
		animation buttonBlink 1.5s infinite ease
	+above(880px)
		position absolute
		bottom 0px
		left 0
		width 100%
.bubble
	width 200px
	height 200px
	background-color rgba(white, 0.9)
	border-radius 50%
	display table
	vertical-align middle
	text-align center
	position absolute
	span
		display block
	.bubble-inner
		height 100%	
		display table-cell
		vertical-align middle
		padding 0 15px
		font-size 1.125rem
		rbs()
	&-green, &-brown
		color black
	&-green
		background-color rgba($green, 0.9)
		&:before
			content ''
			bg('../images/accomplished.png')
			position absolute
			left 50%
			top 50%
			margin-top -(@height / 2)
			margin-left -(@width / 2)
		span
			color white
	&-brown
		background-color rgba($brown, 0.9)
		&:before
			content ''
			bg('../images/accomplished.png')
			position absolute
			left 50%
			top 50%
			margin-top -(@height / 2)
			margin-left -(@width / 2)
		span
			color white
	
.promo-offer
	padding-bottom 20px
	position relative
	+above(880px)
		position absolute
	h1
		font-size: 1.875rem
		rbs()
		margin-bottom 0
	h2
		font-size: 1.625rem
		rbs()
		margin-top 0.5rem
	&:after
		content ''
		height 10px
		background linear-gradient(to top, rgba(black, 0.08), transparent)
		width 100%
		bottom 0px
		position absolute
		left 0
		

.pros-cons
	overflow hidden
	.container
		padding-top 40px
		position relative
	.pros-cons-group
		max-width 1075px
		margin 0 auto
	h2
		font-size: 1.2em
		rbs()
		+above(880px)
			font-size 1.5rem
			position absolute
			max-width 320px
			top 17px
	.pros, .cons
		position static
	.pros h2
		text-align center
		+above(880px)
			text-align right
			left 10%
			max-width 400px
		+above(1200px)
			left 16%
	.cons h2
		text-align center
		+above(880px)
			text-align left
			right 0%
			max-width 400px
		+above(1200px)
			right 8%

.pros-cons-top
	padding 5px 20px 0


.pros-item, .cons-item
	position relative
	margin 40px 0
	min-height 35px
	.img-wrapper
		position absolute
		width: 30px
		height 100%
		text-align center
		top 0
	img
		position absolute
		left 50%
		top 50%
		transform translateY(-50%) translateX(-50%)
		text-align center
		
.pros-item
	padding-right 105px
	text-align right
	animation-fill-mode both
	animation-duration 1s
	+above(880px)
		visibility hidden
		&.visible 
			visibility visible
	.img-wrapper
		right 30px
		
.cons-item
	padding-left 105px
	text-align left
	animation-fill-mode both
	animation-duration 1s
	+above(880px)
		visibility hidden
		&.visible 
			visibility visible
	.img-wrapper
		left 30px
		
.balance
	width 62px
	height 58px
	display block
	text-align center
	margin 0 auto
	position relative
	&.animated-custom
		.balance-top
			animation balanceTop 1.3s 5
			animation-timing-function linear
		.balance-cup
			animation balanceCupLeft 1.3s 5
			animation-timing-function linear
		.balance-cup1
			animation balanceCupRight 1.3s 5
			animation-timing-function linear
	&-base
		bg('../images/balance-base.png')
		display block
		margin 0 auto
	&-top
		bg('../images/balance-top.png')
		position absolute
		top 3px
		left 50%
		margin-left -(@width / 2)
		transform rotate(-20deg)

	&-cup
		bg('../images/balance-cup.png')
		position absolute
		top 5px
		left -2px
		transform translateY(5px)
	&-cup1
		left 36px
		transform translateY(-5px)
		
// help offer

.help-offer
	padding 10px 0 20px
	text-align center
	
// features

.features
	text-align center
	
.feature 
	max-width 200px
	display inline-block
	vertical-align top
	margin 10px 20px
	.feature-icon
		min-height 45px
		
// results

.results 
	padding 10px 0 20px
	
	.results-slider
		position relative
	.wrapper
		+above(880px)
			padding 0 40px
	.heading-lined
		&:before, &:after
			background-color #e5da9f
	.arrow
		bg('../images/arrow-right.png')
		position absolute
		top 47%
		margin-top -(@height / 2)
		background-color transparent
		border none
		transition all 0.3s
		cursor pointer
		display none !important
		opacity 0.6
		&:hover
			opacity 1
		&-left
			transform rotateY(-180deg)
		&-right
			right 0
		&:focus
			outline none
		+above(880px)
			display block !important
			
.result-block
	max-width 430px
	margin 10px auto
	background-color white
	text-align center
	+above(880px)
		display block
	.result-input
		position relative
		&:before
			content ''
			width 80%
			left 50%
			bottom 0
			transform translateX(-50%)
			background-color #e6e6e6
			height 1px
			position absolute
	.result-input, .result-output
		padding 10px
		
		ul
			margin 0
			padding 0
			list-style none
		h4
			margin-top 0
			color $brown
			margin-bottom 0.7rem
			rbs()
		p
			margin 0
		+above(880px)
			padding 20px 35px
	.result-overall
		color white
		text-align center
		background-color $green
		padding 10px 0
		rbs()
	.result-list
		text-align left
		.name
			width 60%
			display inline-block
			text-align right
			margin-right 10px
			+above(880px)
				width 50%
				font-size: 0.875rem

