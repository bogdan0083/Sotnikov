.advocate-img
	display none


.contact
	text-align center
	padding-bottom 20px
	&-item
		text-align center
		display inline-block
		margin 0 40px
		position relative
		vertical-align top
		+above(880px)
			&:first-child
				margin-left 0
				
		h4
			rbs()
			margin 0
			margin-top 10px
		p, address
			display block
			margin 0.5rem 0
			font-style normal
			

.js-move-up
	background-color $green
	bg('../images/arrow-up.png')
	background-position center center
	background-repeat no-repeat
	display none
	position fixed
	width 50px
	height 50px
	bottom 10%
	left 30px
	border-radius 50%
	transition all 0.3s ease
	border none
	cursor pointer
	display none
	pointer-events none
	&:focus
		outline none
	+above(880px)
		z-index 11
		opacity 0
		display block
		&.visible
			opacity 0.6
			pointer-events auto
		&:hover
			opacity 1
			
.arrow-down
	position absolute
	border none
	background-color transparent
	
	display none
	top 50%
	left 30px
	transform translateY(-50%)
	cursor pointer
	&:focus
		outline none
	+above(880px)
		display block
		.str0
			animation arrowBlink 1.5s infinite ease
		.arrow1, .arrow2
			animation blink 1s infinite ease both
		.arrow2
			animation-direction reverse
#form-popup
	max-width 370px
	min-height 320px
	background-color #f1f1f1
	padding 1px 0 20px
	position relative
	display none
	max-width: 280px
	+above(880px)
		max-width 370px
	.close
		position absolute
		right 10px 
		top 10px
		width 17px
		height 17px
		background url(../images/close.png) no-repeat center
		background-repeat no-repeat
		background-position center
		background-color #cbcbcb
		border-radius 50%
		transition all 0.3s
		&:hover
			background-color #c7a33a
	form
		padding 0 10px
		+above(880px)
			padding 0 35px
		.add-info
			font-size: 0.75rem
			text-align center
			display block
			margin-top 20px
			